{% extends 'base.html.twig' %}

{% block title %}Hello AdController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ! âœ…</h1>

    <table class="table">
        <tbody>
            <tr>
                <td>{{ ad.title }}</td>
                <td>{{ ad.category }}</td>
                <td>{{ ad.description }}</td>
                <td>{{ ad.price }}</td>
                <a href="{{ path('email_send', {'id': ad.id}) }}">{{ 'Send mail'|trans }}</a>
            </tr>
        </tbody>
    </table>
     <a href="{{ path('app_ad') }}">{{ 'Back'|trans }}</a>
    {%  if is_granted('AD_EDIT', ad) %}
        <a href="{{ path('ad_edit', {'id': ad.id}) }}">{{ 'Edit'|trans }}</a>
    {% endif %}
</div>
{% endblock %}
